{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 5am on monday"],
  "timezone": "America/Chicago",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "docker-base"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["UNBOUND_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "NLnetLabs/unbound",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^release-(?<version>.+)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["VERSION_OPENSSL=openssl-(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "openssl/openssl",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^openssl-(?<version>.+)$"
    }
  ]
}
