{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 5am"
  ],
  "timezone": "America/Chicago",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "shaanmajid"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "docker-base"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "UNBOUND_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "NLnetLabs/unbound",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^release-(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "VERSION_OPENSSL=openssl-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "openssl/openssl",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^openssl-(?<version>.+)$"
    }
  ]
}
